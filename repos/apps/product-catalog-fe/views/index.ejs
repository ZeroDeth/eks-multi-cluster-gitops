<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Catalog</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              squidInk: '#232F3E',
              anchor: '#003181',
              sky: '#2074d5',
              smile: '#ff9900',
              rind: '#fbd8bf',
              paper: '#f1f3f3'
            }
          }
        }
      }
    </script>

</head>
<body>
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-squidInk">Product Catalog</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">Add new products and view all existing products</p>
  </div>
  <div class="px-4 sm:px-6">
    <form action="/products" method="POST">        
      <div class="flex mx-1">
        <div class="flex items-center mr-2">
          <div class="grid grid-cols-3 gap-6">
            <div class="col-span-3">
              <label for="id" class="block text-sm font-medium text-gray-700">ID</label>
              <div class="mt-1 flex rounded-md shadow-sm">
                <input type="text" name="id" id="id" class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-md sm:text-sm border-gray-300" placeholder="25">
              </div>
            </div>
          </div>
        </div>
        <div class="flex items-center mr-2">
          <div class="grid grid-cols-3 gap-6">
            <div class="col-span-3">
              <label for="name" class="block text-sm font-medium text-gray-700">Product Name</label>
              <div class="mt-1 flex rounded-md shadow-sm">
                <input type="text" name="name" id="name" class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-md sm:text-sm border-gray-300" placeholder="My Product">
              </div>
            </div>
          </div>
        </div>
        <div class="flex items-end">
          <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-squidInk hover:bg-anchor focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Add</button>
        </div>
      </div>
    </form>
  
    <div class="overflow-hidden sm:rounded-lg mt-2">          
      <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
        <table class="text-sm text-left text-gray-500 w-full md:w-96">
          <thead class="text-gray-700 uppercase bg-gray-50">
            <tr>
              <th scope="col" class="py-3 px-6">
                ID
              </th>
              <th scope="col" class="py-3 px-6">
                Product Name
              </th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < Object.keys(products).length; i++) { %>
            <tr class="bg-white border-b hover:bg-gray-50">
              <th scope="row" class="py-4 px-6 font-medium text-squidInk whitespace-nowrap">
                <%= Object.keys(products)[i] %>
              </th>
              <td class="py-4 px-6">
                <%= Object.values(products)[i] %>
              </td>
            </tr>
            <% }; %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>